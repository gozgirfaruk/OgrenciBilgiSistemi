
@{
    ViewBag.Title = "Devamsızlık Durumu";
    ViewBag.Sayfa = "DevamsizlikDurumuPartial";
}
@using OgrenciBilgiSistemi.Db

@model List<OgrenciDers>
<div class="col-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.Title</h5>

            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ders Adı</th>
                        <th scope="col">Ders Saati</th>
                        <th scope="col">Devamsızlık Sayısı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OgrenciDers item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Ders.Adi</td>
                            <td>@item.Ders.ToplamDersSaati</td>
                            <td>@item.DevamsizlikSayisi</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>