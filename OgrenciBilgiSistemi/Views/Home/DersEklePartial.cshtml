
@{
    ViewBag.Title = "Ders Ekle";
    ViewBag.Sayfa = "DersEklePartial";
}


@using OgrenciBilgiSistemi.Db;

@model Ders
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.Title</h5>

            <!-- Horizontal Form -->
            <form method="post" action="/Home/DersEkle">
                <input type="hidden" class="form-control" name="id" value="@Model.Id" />
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Ders Adı</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="adi" value="@Model.Adi">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Akademisyen</label>
                    <div class="col-sm-10">
                        <select class="form-select" name="akademisyenId" aria-label="Bir akademisyen seçiniz!">
                            @foreach (Akademisyen item in ViewBag.AkademisyenList)
                            {
                                <option value="@item.Id" @(item.Id == Model.AkademisyenId ? "selected" : "")>@(item.Unvan + " " + item.AdiSoyadi)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Günler</label>
                    <div class="col-sm-10">
                        <select class="form-select" name="gun" aria-label="Bir gün seçiniz!">
                            <option value="1" @(Model.Gun == 1 ? "selected" : "")>Pazartesi</option>
                            <option value="2" @(Model.Gun == 2 ? "selected" : "")>Salı</option>
                            <option value="3" @(Model.Gun == 3 ? "selected" : "")>Çarşamba</option>
                            <option value="4" @(Model.Gun == 4 ? "selected" : "")>Perşembe</option>
                            <option value="5" @(Model.Gun == 5 ? "selected" : "")>Cuma</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Saatler</label>
                    <div class="col-sm-10">
                        <select class="form-select" name="saat" aria-label="Bir saat seçiniz!">
                            <option value="08:00" @(Model.Saat == "08:00" ? "selected" : "")>08:00</option>
                            <option value="09:00" @(Model.Saat == "09:00" ? "selected" : "")>09:00</option>
                            <option value="10:00" @(Model.Saat == "10:00" ? "selected" : "")>10:00</option>
                            <option value="11:00" @(Model.Saat == "11:00" ? "selected" : "")>11:00</option>
                            <option value="12:00" @(Model.Saat == "12:00" ? "selected" : "")>12:00</option>
                            <option value="13:00" @(Model.Saat == "13:00" ? "selected" : "")>13:00</option>
                            <option value="14:00" @(Model.Saat == "14:00" ? "selected" : "")>14:00</option>
                            <option value="15:00" @(Model.Saat == "15:00" ? "selected" : "")>15:00</option>
                            <option value="16:00" @(Model.Saat == "16:00" ? "selected" : "")>16:00</option>
                            <option value="17:00" @(Model.Saat == "17:00" ? "selected" : "")>17:00</option>
                            <option value="18:00" @(Model.Saat == "18:00" ? "selected" : "")>18:00</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Kredi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="kredi" value="@Model.Kredi">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Toplam Ders Saati</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="toplamDersSaati" value="@Model.ToplamDersSaati">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Vize Oran</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="vizeOran" value="@Model.VizeOran">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Final Oran</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="finalOran" value="@Model.FinalOran">
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                    <button type="reset" class="btn btn-secondary">Sıfırla</button>
                </div>
            </form><!-- End Horizontal Form -->

        </div>
    </div>
</div>
@if (ViewBag.Mesaj != null)
{

    <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
        @ViewBag.Mesaj
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
