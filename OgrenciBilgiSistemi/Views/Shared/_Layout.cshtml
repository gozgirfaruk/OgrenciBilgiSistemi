@using OgrenciBilgiSistemi.Models

@{
    SessionModel session = (SessionModel)Session["session"];
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title - Öğrenci Bilgi Yönetim Sistemi</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin - v2.5.0
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/Content/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">NiceAdmin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="@session.Resim" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@session.GosterimAdi</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@session.GosterimAdi</h6>
                            <span>@session.GosterimUnvani</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="~/Home/Profilim/">
                                <i class="bi bi-person"></i>
                                <span>Profilim</span>
                            </a>
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Auth/Logout/">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>


                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link
                @(ViewBag.Sayfa != "Index" ? "collapsed" : "")
                " href="~/Home/Index/">
                    <i class="bi bi-grid"></i>
                    <span>Anasayfa</span>
                </a>
            </li><!-- End Dashboard Nav -->
            @if (session.Ogrenci != null)
            {
                <li class="nav-item">
                    <a class="nav-link
                @(ViewBag.Sayfa != "DerslerimPartial" ? "collapsed" : "")
                   " href="~/Home/DerslerimPartial/">
                        <i class="bi bi-calendar-date-fill "></i>
                        <span>Derslerim</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                @(ViewBag.Sayfa != "DersProgramiPartial" ? "collapsed" : "")
                   " href="~/Home/DersProgramiPartial/">
                        <i class="bi bi-calendar-date-fill "></i>
                        <span>Ders Programı</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                                   @(ViewBag.Sayfa != "NotListesiPartial" ? "collapsed" : "")
                " href="~/Home/NotListesiPartial/">
                        <i class="bi bi-book-fill"></i>
                        <span>Not Listesi</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                    @(ViewBag.Sayfa != "DevamsizlikDurumuPartial" ? "collapsed" : "")
                   " href="~/Home/DevamsizlikDurumuPartial/">
                        <i class="bi bi-grid"></i>
                        <span>Devamsızlık Listesi</span>
                    </a>
                </li><!-- End Dashboard Nav -->
            }
            @if (session.Akademisyen != null)
            {
                <li class="nav-item">
                    <a class="nav-link
                @(ViewBag.Sayfa != "DerslerimAkademisyenPartial" ? "collapsed" : "")
                   " href="~/Home/DerslerimAkademisyenPartial/">
                        <i class="bi bi-calendar-date-fill "></i>
                        <span>Derslerim</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                @(ViewBag.Sayfa != "DersEklePartial" ? "collapsed" : "")
                   " href="~/Home/DersEklePartial/">
                        <i class="bi bi-calendar-date-fill "></i>
                        <span>Ders Ekle</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                @(ViewBag.Sayfa != "AkademisyenDersProgramiPartial" ? "collapsed" : "")
                   " href="~/Home/AkademisyenDersProgramiPartial/">
                        <i class="bi bi-calendar-date-fill "></i>
                        <span>Ders Programı</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                                   @(ViewBag.Sayfa != "NotGirisPartial" ? "collapsed" : "")
                " href="~/Home/NotGirisPartial/">
                        <i class="bi bi-book-fill"></i>
                        <span>Not Giriş</span>
                    </a>
                </li><!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link
                    @(ViewBag.Sayfa != "DevamsizlikGirisPartial" ? "collapsed" : "")
                   " href="~/Home/DevamsizlikGirisPartial/">
                        <i class="bi bi-grid"></i>
                        <span>Devamsızlık Giriş</span>
                    </a>
                </li><!-- End Dashboard Nav -->
            }
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        <div class="pagetitle">
            <h1>@ViewBag.Title</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        @RenderBody()

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Ogrenci Bilgi Sistemi
        </div>
        <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
            Created By Ömer Faruk GÖZEGİR
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/Content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>

</body>

</html>